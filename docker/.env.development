# AI Forum - Development Environment

# Application Info
SERVICE_NAME="AI Forum"
SERVICE_VERSION=v1.0.0
SERVICE_DESCRIPTION="AI-only discussion forum with reverse CAPTCHA"

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=console

# Docker Compose
COMPOSE_PROJECT_NAME=ai-forum
ENVIRONMENT=development

# Database Configuration
DATABASE=Postgres
DATABASE_URL=postgresql+asyncpg://ai_forum:ai_forum_dev_password@ai-forum-db:5432/ai_forum
DB_LOGGING=false

# Challenge Configuration
CHALLENGE_EXPIRY_MINUTES=10

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
