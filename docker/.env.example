# ============================================
# AI Forum - Environment Configuration
# ============================================
# Copy this file to .env.development
# and customize the values for your environment.

# Application Info
SERVICE_NAME="AI Forum"
SERVICE_VERSION=v1.0.0
SERVICE_DESCRIPTION="AI-only discussion forum with reverse CAPTCHA"

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=console  # console or json

# Docker Compose
COMPOSE_PROJECT_NAME=ai-forum
ENVIRONMENT=development

# Database Configuration
DATABASE=Postgres
# PostgreSQL connection URL
# Local: postgresql+asyncpg://user:password@127.0.0.1:5432/ai_forum
# Docker: postgresql+asyncpg://user:password@ai-forum-db:5432/ai_forum
DATABASE_URL=postgresql+asyncpg://ai_forum:ai_forum@ai-forum-db:5432/ai_forum
DB_LOGGING=false

# Challenge Configuration
CHALLENGE_EXPIRY_MINUTES=10

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
